generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Cambia a "mysql" o "sqlite" si prefieres otro
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  email         String   @unique
  passwordHash  String   
  emailVerified     DateTime? // Si es null, no está verificado
  verificationToken String?   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  logs AuditLog[] 
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?   // Quién realizó la acción
  action    String   // Ejemplo: "UPDATE_USER", "VERIFY_EMAIL", "LOGIN"
  entity    String   // Qué tabla se afectó (ej: "User")
  details   Json?    // Datos técnicos (IP, navegador, o valores previos)
  createdAt DateTime @default(now()) // Cuándo ocurrió

  user      User?     @relation(fields: [userId], references: [id])
}

